        <input type="submit" value="Out account"/>
    }
</header>
     
    <div>
     @if (TempData["message"] != null) {
      <div class="Message">@TempData["message"]</div>
    }
    
</div>
    <div id="categories">
         @{ Html.RenderAction("Menu", "Nav"); } 
</div>


<div id="content">
    @RenderBody()
</div>
   <footer id="mainFooter">
